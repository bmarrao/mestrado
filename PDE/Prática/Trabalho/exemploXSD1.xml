        <seção>
            <!-- ainda posso opcionalmente adicionar uma seção -->
            <titulo>
                Comida de Roma
            </titulo>
            <receita>
                <nome>Spaghetti Alfredo</nome>
                <ingredientes >
                    <ingrediente id="5">
                        <nome>
                            spaghetti
                        </nome>
                        <!-- Opcional -->

                        <quantidade>
                            100
                        </quantidade>
