            2023-10-19
        </data-publicacao>
        <resumo>
            Esse é o resumo opcional
        </resumo>
    </cabecalho>

    <parte >
        <titulo>Comida italiana</titulo>
        <texto-introdutorio>Esse é o texto-introdutorio opcional</texto-introdutorio>
        <receita id ="spaghetti">
            <nome>
                Spaghetti Bolonhesa
            </nome>
            <calorias>500</calorias>
            <categoria>prato-principal</categoria>
            <dificuldade>simples</dificuldade>
            <tempo>médio</tempo>
            <custo>barato</custo>

            <!-- aqui irei adicionar uma receita como exemplo -->
            <ingredientes>
                <ingrediente id="spaghetti-ingrediente">
                    <nome>
                        spaghetti
                    </nome>
                    <!-- Opcional -->

                    <quantidade>
                        100
                    </quantidade>
                    <!-- Opcional -->
                    <unidade-medida>
                        gramas
                    </unidade-medida>
                </ingrediente>
                <ingrediente  id ="molho">
                    <nome>Molho </nome>
                    <quantidade>100</quantidade>
                    <unidade-medida>ml</unidade-medida>
                </ingrediente>
            </ingredientes>
            <instruções >
                Para fazer o molho
                <passo id="fazer-molho">
                    Aquecer o <ingredienteRef ref="molho"/>
                </passo>
                Para fazer a massa
                <passo id="fazer-massa">
                    Cozinhar o <ingredienteRef ref="spaghetti-ingrediente"/>
                </passo>
                Para fazer o molho
                <passo id="juntar-massa-molho">
                    Juntar <ingredienteRef ref="molho"/> e <ingredienteRef ref="spaghetti-ingrediente"/>
                </passo>
            </instruções>
        </receita>
        <seção>
            <!-- ainda posso opcionalmente adicionar uma seção -->
            <titulo>
                Comida de Roma
            </titulo>
            <receita>
                <nome>Spaghetti Alfredo</nome>
                <ingredientes >
                    <ingrediente id="spaghetti-ingrediente-2">
                        <nome>
                            spaghetti
                        </nome>
                        <!-- Opcional -->

                        <quantidade>
                            100
                        </quantidade>
                        <!-- Opcional -->
                        <unidade-medida>
                            gramas
                        </unidade-medida>
                    </ingrediente>
                    <ingrediente  id ="molho-2">
                        <nome>Molho </nome>
                        <quantidade>100</quantidade>
                        <unidade-medida>ml</unidade-medida>
                    </ingrediente>
                </ingredientes>
                <instruções>
                    <passoRef ref="fazer-molho"/>
                    <passoRef ref="fazer-massa"/>
                </instruções>
            </receita>

            <sub-seção>
                <titulo>Sobremesas</titulo>
                <receita id="tiramisu"   >
                    <nome>
                        tiramisu
                    </nome>
                    <categoria>sobremesa</categoria>
                    <dificuldade>díficil</dificuldade>
                    <tempo>lento</tempo>
                    <custo>barato</custo>
                    <ilustração>./images/tiramisu</ilustração>

                    <ingredientes >
                        <ingrediente id="cafe">
                            <nome>cafe</nome>
                            <quantidade>100</quantidade>
                            <unidade-medida>ml</unidade-medida>
                        </ingrediente>
                        <ingrediente id="biscoito">
                            <nome>biscoito champangne</nome>
                            <quantidade>1</quantidade>
                            <unidade-medida>pacotes</unidade-medida>
                        </ingrediente>
                        <ingrediente id="açucar">
                                <nome>
                                    açucar
                                </nome>
                        </ingrediente>
                        <ingrediente id="leite">
                            <nome>
                                leite
                            </nome>
                        </ingrediente>
                        <ingrediente id="gemas">
                            <nome>gemas</nome>
                            <quantidade>
                                3
                            </quantidade>
                        </ingrediente>
                        <ingrediente id="chocolate-em-po">
                            <nome>
                                chocolate em po
                            </nome>
                        </ingrediente>
                        <ingrediente id="mascarpone">
                            <nome>mascarpone</nome>
                            <quantidade>500</quantidade>
                            <unidade-medida>gramas</unidade-medida>
                        </ingrediente>
                    </ingredientes>
                    <instruções>
                        <passo ilustração-atrib="bater-leite">
                            Bata o <ingredienteRef ref="leite"/> na batedeira até obter um chantilly firme.
                        </passo>
                        <passo>
                            Reserve
                        </passo>
                        <passo>
                            Bata o <ingredienteRef ref="açucar"/> com as <ingredienteRef ref="gemas"/> e o conhaque por 3 minutos.
                        </passo>
                        <passo>
                            Acrescente o chantilly, o <ingredienteRef ref="mascarpone"/> e misture bem.
                        </passo>
                        <passo>
                            Molhe rapidamente os <ingredienteRef ref="biscoito"/> no <ingredienteRef ref="cafe"/> (um a um) e coloque em um refratário formando uma camada, coloque por cima uma camada do creme, faça mais uma camada de <ingredienteRef ref="biscoito"/> molhados no <ingredienteRef ref="cafe"/> e por último mais uma camada de creme.
                        </passo>
                        <passo>
                            Para finalizar polvilhe <ingredienteRef ref="chocolate-em-po"/> em pó amargo.
                        </passo>
                        <passo>
                            Leve à geladeira por no mínimo 3 horas e sirva.
                        </passo>

                    </instruções>
                </receita>
            </sub-seção>
        </seção>
    </parte>

</receitas>