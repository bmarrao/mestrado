        xmlns="trabalhoPDE"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="trabalhoPDE receitas.xsd"
        >
    <cabecalho>
        <titulo>Livro de receitas do Breno</titulo>
        <autor>Breno Fernando Guerra Marrão</autor>
        <autor>Se quiser posso adicionar outros autores</autor>
