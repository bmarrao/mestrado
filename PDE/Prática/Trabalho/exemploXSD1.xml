        <receita id ="1">
            <nome>
                Spaghetti Bolonhesa
            </nome>
            <ilustração>"./images/spaghetti"</ilustração>
            <dificuldade>simples</dificuldade>
            <categoria>prato-principal</categoria>
            <custo>barato</custo>
            <tempo>medip</tempo>

            <!-- aqui irei adicionar uma receita como exemplo -->
