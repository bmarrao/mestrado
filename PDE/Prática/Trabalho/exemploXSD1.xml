                <ingrediente id="3">
                    <nome>
                        spaghetti
                    </nome>
                    <!-- Opcional -->

                    <quantidade>
                        100
                    </quantidade>
                    <!-- Opcional -->
                    <unidade-medida>
                        gramas
                    </unidade-medida>
                </ingrediente>
                <ingrediente  id ="4">
                    <nome>Molho </nome>
                    <quantidade>100</quantidade>
                    <unidade-medida>ml</unidade-medida>
                </ingrediente>
            </ingredientes>
            <instruções >
                Para fazer o molho
                <passo id="fazer-molho">
                    Aquecer o <ingredienteRef ref="4"/>
                </passo>
                Para fazer a massa
                <passo id="fazer-massa">
                    Cozinhar o <ingredienteRef ref="3"/>
                </passo>
                Para fazer o molho
                <passo id="juntar-massa-molho">
